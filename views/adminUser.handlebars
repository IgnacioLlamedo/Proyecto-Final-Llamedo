<h1>Users</h1>
<div class="form2">
    {{#each users}}
    <div>
        <li>Username: {{this.username}}</li>
        <li>E-mail: {{this.email}}</li>
        <li>Role: {{this.role}}</li>
        {{#if ../admin}}
        <button onclick="changeRole('{{this.email}}', 'user')">
            Change role to user
        </button>
        <button onclick="changeRole('{{this.email}}', 'premium')">
            Change role to premium
        </button>
        <button onclick="changeRole('{{this.email}}', 'admin')">
            Change role to admin
        </button>
        <button onclick="deleteUser('{{this.email}}')">
            Delete user
        </button>
        {{/if}}
    </div>
    {{/each}}
    <a href="/profile">Profile</a>
    <a href="/products">Products</a>
</div>